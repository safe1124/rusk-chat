{
  "version": 2,
  "name": "rask-chatbot-backend",
  "builds": [
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    }
  ],
  "env": {
    "OPENAI_API_KEY": "@openai-api-key",
    "JWT_SECRET": "@jwt-secret",
    "ALLOWED_ORIGINS": "@allowed-origins"
  },
  "functions": {
    "api/**/*.js": {
      "maxDuration": 30
    }
  }
}
